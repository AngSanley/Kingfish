<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:padding="16dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/semesterGpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-11dp"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="8dp"
        android:text="Semester GPA"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cumulativeGpa" />

    <TextView
        android:id="@+id/semesterGpaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="4.00"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBaseline_toBaselineOf="@+id/semesterGpa"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cumulativeGpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-1dp"
        android:text="Cumulative GPA"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cumulativeGpaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-12dp"
        android:layout_marginRight="-12dp"
        android:text="4.00"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBaseline_toBaselineOf="@+id/cumulativeGpa"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/totalCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total Credits"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semesterGpa" />

    <TextView
        android:id="@+id/totalCreditCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="24"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBaseline_toBaselineOf="@+id/totalCredits"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>